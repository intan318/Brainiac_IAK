<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:orientation="vertical"
    tools:context="com.example.intanyoshanaoewen.brainiac.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question #7"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="6dp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/unnamed"
            android:layout_marginTop="3dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="270dp"
        android:layout_height="190dp"
        android:src="@drawable/spore"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="What is the capital city of Singapore?"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="19sp" />

        <EditText
            android:id="@+id/txtAnswer"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#4f9f86"
            android:layout_marginTop="25dp"
            android:hint="Answer" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#ea6ba2"
        android:text="submit"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="17sp"
        />

    </LinearLayout>
</ScrollView>
