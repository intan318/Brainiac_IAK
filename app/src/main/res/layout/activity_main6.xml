<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.example.intanyoshanaoewen.brainiac.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question #5"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="6dp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/unnamed"
            android:layout_marginTop="3dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:src="@drawable/ukflag"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="What countries included in the United Kingdom?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

        <CheckBox
            android:id="@+id/cbxEngland"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="England"
            android:textSize="17sp"
            android:textColor="#000000"
            android:padding="10dp"
            />

        <CheckBox
            android:id="@+id/cbxWales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wales"
            android:textSize="17sp"
            android:textColor="#000000"
            android:padding="10dp"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/cbxScotland"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scotland"
                android:textSize="17sp"
                android:textColor="#000000"
                android:padding="10dp"
                />

            <CheckBox
                android:id="@+id/cbxNorthIre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nothern Ireland"
                android:textSize="17sp"
                android:textColor="#000000"
                android:padding="10dp"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#ea6ba2"
        android:text="submit"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="17sp"
        />

    </LinearLayout>

</ScrollView>
