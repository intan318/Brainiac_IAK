<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="com.example.intanyoshanaoewen.brainiac.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question #1"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_margin="6dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/unnamed"
        android:layout_marginTop="3dp"
        />

    </LinearLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="178dp"
        android:src="@drawable/chameleon"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What kind of reptile is the chameleon?"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:textSize="19sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
        android:id="@+id/radioGroupAns1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/txtQuestion"
        android:layout_centerHorizontal="true"
            >

        <RadioButton
            android:id="@+id/rbtnSnake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Snake"
            android:textSize="17sp"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/rbtnLizard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lizard"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:textColor="#000000" />

        <RadioButton
             android:id="@+id/rbtnTurtle"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="5dp"
             android:text="Turtle"
             android:textSize="17sp"
             android:textColor="#000000"
             />

        <RadioButton
             android:id="@+id/rbtnTuatara"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Tuatara"
             android:textSize="17sp"
             android:textColor="#000000" />

     </RadioGroup>

    </RelativeLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#ea6ba2"
        android:text="submit"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="17sp"
        android:onClick="checkResult" />

    </LinearLayout>

</ScrollView>
